# File system
alias ls='eza -lh --group-directories-first --icons=auto'
alias l='ls'
alias ll='ls -al'
alias la='ls -a'
alias lt='eza --tree --level=2 --long --icons --git'
alias lta='lt -a'
alias ff="fzf --preview 'batcat --style=numbers --color=always {}'"
alias fd='fdfind'
alias cd='z'

# Directories
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'

# Tools
n() { if [ "$#" -eq 0 ]; then nvim .; else nvim "$@"; fi; }
alias g='git'
alias d='docker'
alias cat='batcat'
alias grep='rg'
alias lzg='lazygit'
alias lzd='lazydocker'
alias http='xh'

# OpenVPN
alias vpn='openvpn3'
alias vl='vpn sessions-list'
alias vd='vpn session-manage -D -c dilax'

vpn-config() {
    op document get vpn-config --vault DILAX --out-file dilax.ovpn
    vpn config-import --config dilax.ovpn --name dilax -p --tag dilax
    rm dilax.ovpn
  }

vc() {
    USER=$(op item get 'AD Account' --fields username --vault DILAX)
    PW=$(op item get 'AD Account' --fields password --vault DILAX --reveal)
    OTP=$(op item get VPN --vault DILAX --otp)
    printf "$USER\n$PW$OTP\n" | vpn session-start --config dilax
  }

# Git
alias gcm='git commit -m'
alias gcam='git commit -a -m'
alias hogcad='git commit -a --amend'
alias gst='git status -sb'
