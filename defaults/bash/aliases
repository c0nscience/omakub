alias k='kubectl'
complete -o default -F __start_kubectl k

# OpenVPN
alias vpn='openvpn3'
alias vl='vpn sessions-list'
alias vd='vpn session-manage -D -c dilax'

vpn-config() {
    op document get vpn-config --vault DILAX --out-file dilax.ovpn
    vpn config-import --config dilax.ovpn --name dilax -p --tag dilax
    rm dilax.ovpn
  }

vc() {
    USER=$(op item get 'AD Account' --fields username --vault DILAX)
    PW=$(op item get 'AD Account' --fields password --vault DILAX --reveal)
    OTP=$(op item get VPN --vault DILAX --otp)
    printf "$USER\n$PW$OTP\n" | vpn session-start --config dilax
  }

